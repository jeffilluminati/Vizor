<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/diseaseFragmentImageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/disease_covid"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:id="@+id/nameBackground"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/no_vaccine"
            android:orientation="vertical">

            <TextView
                android:id="@+id/diseaseFragmentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="32sp"
                android:textStyle="bold"
                android:text="COVID-19"
                android:layout_marginLeft="32dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/diseaseFragmentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:text="No vaccination received"
                android:textColor="@color/black"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/vaccinationProgress"
            android:layout_height="wrap_content">
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:layout_width="500dp"
                android:id="@+id/progressBar"
                android:layout_height="100dp"
                android:rotation="90"
                android:progress="50"
                android:layout_marginLeft="-200dp"
                android:layout_marginTop="248dp"
                />

            <TextView
                android:id="@+id/vaccinationConfirmDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="60dp"
                android:textSize="18dp"
                android:text="12/2/2021 Vaccination confirmed"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/vaccinationFirstDoseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_below="@id/vaccinationConfirmDate"
                android:layout_marginLeft="60dp"
                android:textSize="18dp"
                android:text="21/2/2021 First dose received"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/vaccinationSecondDoseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_below="@id/vaccinationFirstDoseDate"
                android:layout_marginLeft="60dp"
                android:textSize="18dp"
                android:text="11/3/2021 Receive Second dose"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/vaccinationResistanceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_below="@id/vaccinationSecondDoseDate"
                android:layout_marginLeft="60dp"
                android:textSize="18dp"
                android:text="~16/3/2021 Full resistance to be achieved"
                android:textColor="@color/black"/>


        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/infoTextView"
            android:textSize="24dp"
            android:text="Vaccine:
"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="24dp"
            android:textColor="@color/black"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/moreInfoButton"
            android:drawableLeft="@drawable/ic_baseline_open_in_browser_24"
            android:textColor="@color/white"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text="More info about this disease"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_verified_user_24"
            android:id="@+id/verifiedText"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="120dp"
            android:text="Information last verified by MOH Vizor on 24 February 2021"
            android:textColor="@color/black"
            android:layout_marginRight="24dp"
            android:drawablePadding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="18sp"
            />


    </LinearLayout>



</ScrollView>