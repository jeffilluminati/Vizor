<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Vizor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#7BB177</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Vizor.button" parent="@style/Widget.MaterialComponents.Button">
        <item name="colorButtonNormal"> #7BB177</item>
        <item name="color">#7BB177</item>
        <item name="android:textColor">#D6FFE1</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:textSize">24sp</item>
        <item name="android:shadowRadius">0.0</item>
        <item name="cornerRadius">1dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
</resources>