<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_vaccines">

    <fragment
        android:id="@+id/navigation_id"
        android:name="com.example.vizor.ui.IdFragment"
        android:label="@string/bottom_nav_title_1"
        tools:layout="@layout/fragment_id">
        <action
            android:id="@+id/action_navigation_id_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/navigation_vaccines"
        android:name="com.example.vizor.ui.VaccineFragment"
        android:label="@string/bottom_nav_title_2"
        tools:layout="@layout/fragment_vaccines" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.vizor.ui.HistoryFragment"
        android:label="@string/bottom_nav_title_3"
        tools:layout="@layout/fragment_history" >
        <action
            android:id="@+id/action_navigation_history_to_countryFragment"
            app:destination="@id/countryFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.vizor.ui.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_infoFragment2"
            app:destination="@id/infoFragment2"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/countryFragment"
        android:name="com.example.vizor.ui.CountryFragment"
        android:label="fragment_country"
        tools:layout="@layout/fragment_country" >
        <argument
            android:name="country"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment2"
        android:name="com.example.vizor.ui.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info" />
</navigation>